<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.fragment.PemasukanFragment"
    android:background="@color/blue_dark">

    <include
        android:id="@+id/headerIncome"
        layout="@layout/header_income"
        android:layout_width="match_parent"
        android:layout_height="61dp" />

    <TextView
        android:id="@+id/titleAllIncomeTrc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/text_allIncomeTrc" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="18dp"
        android:entries="@array/months"
        android:fontFamily="@font/montserrat_regular"
        android:spinnerMode="dropdown" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPemasukan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:visibility="visible"
        tools:listitem="@layout/item_transaction_layout" />



</LinearLayout>
